@model ReqUserLogin
@{
    ViewData["Title"] = "Giriş Paneli";
}
<style>
    .invalid-feedback {
        display: block;
        width: 100%;
        margin-top: 0.25rem;
        font-size: 80%;
        color: #FF0B37;
    }
</style>

<div class="auth-wrapper align-items-stretch aut-bg-img aut-bg-img3">
    <div class="flex-grow-1">
        <div class="h-100 d-md-flex align-items-center auth-side-img">
            <div class="col-sm-10 auth-content w-auto">
            </div>
        </div>
        <div class="auth-side-form">
            <div class="auth-content">
                <div class="row justify-content-center">
                    <div class="col-md-12 col-xl-8 col-lg-8">
                        <div class="text-center">
                            <img src="~/theme/images/logo/orderPortsLogin.png" alt="" class="img-fluid mb-1">
                        </div>
                        <div asp-validation-summary="ModelOnly"></div>
                        <form class="my-3" asp-controller="Security" asp-action="Authenticate" method="post">

                            <div class="form-group">
                                <label>Kullanıcı Adı</label>
                                <input type="text" class="form-control" asp-for="UserName" name="UserName" required="">
                                <span class="invalid-feedback" asp-validation-for="UserName"></span>
                            </div>

                            <div class="form-group">
                                <label>Şifre</label>
                                <input type="password" class="form-control" asp-for="Password" name="Password">
                                <span class="invalid-feedback" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group">
                                <span class="invalid-feedback">@TempData["Error"]</span>
                            </div>


                            <div class="form-group">
                                <button class="btn btn-primary btn-block mb-4" type="submit" onsubmit="loadingFunc" value="Giriş Yap">Giriş Yap</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
            <div class="footer-cont text-center">
                <h6 class="mb-0 text-muted">©@DateTime.Today.Year - All Rights Reserved. Konuşarak Öğren®</h6>
            </div>
        </div>
    </div>
</div>

